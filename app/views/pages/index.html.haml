
:css
  .box {
    display: block;
    width: 50px;
    height: 50px;
    background-color: blue;
    margin-bottom: 10px;
    border: 1px solid transparent;
  }
  .box.active {
    background-color: green;
  }
  .box.in {
    background-color: red;
  }
  .box.bordered {
    border-color: black;
  }
  .hello.active {
    color: green;
  }

  .tester .active a {
    color: #ff00ff;
  }


